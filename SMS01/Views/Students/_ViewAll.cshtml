@model IEnumerable<SMS01.Models.Student>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                Image
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.CNIC)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Address)
            </th>*@
            <th>
                <a class="btn btn-success rounded-0 text-white" onclick="showInPopup('@Url.Action("AddOrUpdate","Students", null, Context.Request.Scheme)','New Student')">
                    <i class="fa-solid fa-square-plus"></i> New
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    <img style="height:100px;width:100px" src="@(string.IsNullOrEmpty(item.ImagePath)?"/Image/no-img.jpg":item.ImagePath)" />
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.CNIC)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Address)
            </td>*@
                <td>
                    <a onclick="AddOrUpdate(@item.StudentId)" class="btn btn-warning rounded-0">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <form onsubmit="return DeleteStudent(this);" class="d-inline" asp-action="Delete" asp-route-id="@item.StudentId">
                        <input id="" type="submit" value="Delete" class="btn btn-danger rounded-0" />
                    </form>
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-info rounded-0">
                        <i class="fa-solid fa-info"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
